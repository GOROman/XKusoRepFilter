{
  "manifest_version": 3,
  "name": "XKusoRepFilter",
  "version": "1.4.1",
  "description": "X（旧Twitter）で特定の文字列を含む投稿をブロックする拡張機能",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
